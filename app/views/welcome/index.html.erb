<div class="row"></div>
<div class="container sixteen columns">
<h1>Tunr</h1>

<h3>Welcome <%= @current_listener.username %></h3>

<form action="/songs/search" method="get">
  <input type="text" name="search_term" placeholder="... search for a song">
  <input type="submit" value="Search">
</form>

<% @songs.each do |song| %>

  <div class="six columns alpha song_box">
    <h3>
      <%= song.title %>
    </h3>
    <img src="<%= song.artwork_url %>">

    <audio controls src="<%= song.preview_link %>"></audio>
    <div class="row"></div>

    <form action="/songs/<%= song.id %>" method="post">
      <%= token_tag %>
      <input type="hidden" name="_method" value="delete">
      <button type="submit">
        <i class="fa fa-trash-o"></i>
      </button>
    </form>
  </div>
  <div class="row"></div>
<% end  %>
</div>
